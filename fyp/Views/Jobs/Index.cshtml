@model IEnumerable<fyp.Models.JobsModel>

@{
    ViewData["Title"] = "Index";
}


  
<div class="row">

    
    @foreach (var item in Model) {

    
    <div class="col-lg-6 col-md-12">
        <div class="card-body p-4">
            <div class="bookmark rounded-circle">
                <i class="bi bi-bookmark"></i>
            </div>

            <div class="d-flex flex-row mb-3 card">

                <div class="p-2">
                    <img src="img/banner.png" class="rounded-circle" alt="images" style="width: 55px;height: 55px;padding: 0px">
                </div>

                <div class="p-2">
                    <h5 class="card-title">
                        <a class="nav-link" href="#">@item.Category.CategoryName</a>
                        <i class="bi bi-briefcase pe-2"></i>@item.Corporation.CorporationName
                    </h5>
                    <div class="d-inline-flex p-2 card-text">
                        <p class="" style="width:500px">
                            
                            @item.Description

                        </p>
                    </div>




                        <a href="jobs/Details/@item.JobId"  class="apply-link">
                            Details


                            <span class="arrow">
                                <img src="img/circle.svg">
                            </span>
                        </a>

                   
                </div>
            </div>
        </div>
    </div>


    }

    






</div>

 